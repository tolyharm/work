using System;

namespace ConsoleApp
{
    class Program
    {
        static void Main()
        {
            string text = "1.5.8.4.6.7.";
            int counter = 0;

            for (int i = 0; i < text.Length; i++)
            {
                if (text[i] == '.')
                {
                    counter++;
                }
            }
            Console.WriteLine(text.Replace("." , ""));
            Console.WriteLine(counter);
        }
    }
}
