using System;

namespace ConsoleApp1
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Введите число: ");
            int number = Convert.ToInt32(Console.ReadLine());
            string s;
            if (number == 0)
            {
                s = "равно нулю";
            }
            else if (number < 0)
            {
                s = "отицательное";
            }
            else
            {
                s = "положительное";
            }
            Console.WriteLine($"Число {number} {s}");

            Console.ReadLine();
        }
    }
}
