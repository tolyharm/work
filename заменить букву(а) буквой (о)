using System;

namespace ConsoleApp
{
    class Program
    {
        static void Main()
        {
            string text = Convert.ToString(Console.ReadLine());
            int counter = 0;

            for (int i = 0; i < text.Length; i++)
            {
                if (text[i] == 'а')
                {
                    counter++;
                }
            }
            Console.WriteLine(text.Replace("а" , "о"));
            Console.WriteLine(counter);
            Console.WriteLine(text.Length);
        }
    }
}
